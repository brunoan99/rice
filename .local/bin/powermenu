#! /bin/sh

chosen=$(printf "Power Off\nRestart\nSuspend\nHibernate\nLog Out" | rofi -dmenu -i -theme-str '@import "power.rasi"')

case "$chosen" in
	"Power Off") poweroff ;;
	"Restart") reboot ;;
	"Suspend") systemctl suspend-then-hibernate ;;
	"Hibernate") systemctl hibernate ;;
	"Log Out") bspc quit ;;
	*) exit 1 ;;
esac
